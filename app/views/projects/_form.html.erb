<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :team %>
    <div class="col-sm-8">
      <%= form.text_field :team_name, id: :project_team_name, value: @team.name, class: "form-control form-control-lg", readonly: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :name %>
    <div class="col-sm-8">
      <%= form.text_field :name, id: :project_name, class: "form-control form-control-lg" %>
    </div>
  </div>

  <div class="field">
    <%= form.hidden_field :team_id, id: :project_team_id, value: @team.id %>
  </div>

  <div class="actions">
    <%= form.submit id: "submit" %>
    <%= link_to 'Cancel', @back_url, id: "cancel" %>
  </div>
<% end %>
