<div class="container">
  <div class="row">
    <h2>Update registration</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="ffield">
        <%= f.label :email, class: 'flabel' %><br />
        <%= f.email_field :email, autofocus: true, class: 'fcontrol' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="ffield">
        <%= f.label :password, class: 'flabel' %> <i>(<%= @minimum_password_length %> characters minimum, leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: 'fcontrol' %>
      </div>

      <div class="ffield">
        <%= f.label :password_confirmation, class: 'flabel' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'fcontrol' %>
      </div>

      <div class="ffield">
        <%= f.label :current_password, class: 'flabel' %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: 'fcontrol' %>
      </div>

      <div class="actions">
        <%= f.submit "Update", id: 'submit' %>
        <%= link_to "Cancel", :back, id: 'cancel' %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  </div>
</div>
